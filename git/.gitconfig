	email = marius.schuller@googlemail.com
	signingkey = EE69818D

[alias]
	b = branch
	br = branch
	ci = commit
	co = checkout
	commend = commit --amend --no-edit
	hub = repo hub
	it = !git init && git commit -m “root” --allow-empty
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	logpretty = log --graph --decorate --pretty=oneline --abbrev-commit
	merc = merge --no-ff
	please = push --force-with-lease
	s = status
	sco = ! git commit -m \"$(curl -s whatthecommit.com/index.txt)\"
	st = status
	undo = reset --soft HEAD^
	yolo = !git add -A && git commit -m \"$(curl -s whatthecommit.com/index.txt)\" && git push

[merge]
	ff = only
	tool = vimdiff
	conflictstyle = diff3

[push]
	default = current

[status]
	showUntrackedFiles = all

[transfer]
	fsckobjects = true

[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true

[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX

[grep]
	lineNumber = true
[protocol]
	version = 2
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[interactive]
	diffFilter = diff-so-fancy --patch
